        "application/json": {
        "schema": {
            "$ref": "#/components/schemas/User"
            }
        }
       }
       },
       "responses": {
        "200": {
            "description": "OK",
            "schema": {
            "$ref": "#/components/schemas/User"
            }
        },
        "404": {
            "description": "NOT FOUND",
            "schema": {
            "$ref": "#/components/schemas/User"
            }
    }
    }
}
